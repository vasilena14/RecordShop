@model IEnumerable<RecordShop.Models.Artist>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Artists / Bands</h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-info" asp-action="Create">Add New Artist / Band</a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-12">
        <table class="table table-striped border">
            <thead>
                <tr class="table-info">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(m => m.Year)
                        </th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@Html.DisplayFor(m => item.Name)</td>
                        <td class="text-end align-middle">
                            <div class="btn-group" role="group">
                                @*<a type="button" class="btn btn-primary" href="@Url.Action("Edit/"+item.RecordId)">Edit</a>*@
                                <a type="button" class="btn btn-primary rounded-0" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <form method="post" action="Delete">
                                    <input onclick="if (!confirm('Are you sure you want to delete this artist/band?')){ return false}" type="submit" class="btn btn-danger rounded-0" asp-action="Delete" asp-route-id="@item.Id" value="Delete" />
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

