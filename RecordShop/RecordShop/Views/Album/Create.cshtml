@model RecordShop.Models.ViewModels.AlbumViewModel
@using RecordShop.Extensions
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h2 class="text-info">Add New Album</h2>
<br />
<div class="row">
    <form asp-action="Create">
        <div class="form-group row mb-1">
            <div class="col-2">
                <label asp-for="Artists"></label>
            </div>
            <div class="col-4">
                <select asp-for="Album.ArtistID" asp-items="Model.Artists.ToSelectListItem()" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row mb-1">
            <div class="col-2">
                <label asp-for="Album.Name"></label>
            </div>
            <div class="col-4">
                <input asp-for="Album.Name" class="form-control" />
                <span asp-validation-for="Album.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-1">
            <div class="col-2">
                <label asp-for="Album.Year"></label>
            </div>
            <div class="col-4">
                <input asp-for="Album.Year" class="form-control" />
                <span asp-validation-for="Album.Year" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row text-end">
            <div class="col-6 form-group">
                <input type="submit" class="btn btn-primary" value="Create" />
                <a asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </div>
    </form>
</div>

